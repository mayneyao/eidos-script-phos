{
    "id": "phos",
    "name": "Phos",
    "description": "Play music in Eidos",
    "version": "0.0.1",
    "main": "dist/main.js",
    "commands": [
        {
            "name": "play",
            "description": "play",
            "inputJSONSchema": {
                "type": "object",
                "properties": {
                    "title": {
                        "type": "string"
                    }
                },
                "required": []
            },
            "outputJSONSchema": {
                "type": "object",
                "properties": {},
                "required": []
            },
            "asTableAction": true
        },
        {
            "name": "scan",
            "description": "scan audio files in current space, and add them to the songs table",
            "inputJSONSchema": {
                "type": "object",
                "properties": {},
                "required": []
            },
            "outputJSONSchema": {
                "type": "object",
                "properties": {},
                "required": []
            }
        }
    ],
    "tables": [
        {
            "name": "songs",
            "fields": [
                {
                    "name": "title",
                    "type": "string"
                },
                {
                    "name": "source",
                    "type": "string"
                },
                {
                    "name": "album",
                    "type": "string"
                },
                {
                    "name": "artist",
                    "type": "string"
                },
                {
                    "name": "artists",
                    "type": "string"
                }
            ]
        }
    ]
}